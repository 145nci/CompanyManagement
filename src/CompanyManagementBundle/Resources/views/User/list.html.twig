{% extends 'base.html.twig' %}

{% block body %}
<div class="entry2">
    <h1>User list</h1>
    <table>
        <thead>
        <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Email</th>
            <th>Address</th>
            <th>Zipcode</th>
            <th>City</th>
            <th>Telephone</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                {#<td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>#}
                <td><span class="description">{{ user.firstName }}</span></td>
                <td><span class="description">{{ user.lastName }}</span></td>
                <td><span class="mail">{{ user.email }}</span></td>
                <td><span class="mail">{{ user.address }}</span></td>
                <td><span class="zip">{{ user.zipCode }}</span></td>
                <td><span class="description">{{ user.city }}</span></td>
                <td><span class="description">{{ user.telephone }}</span></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new entry</a>
        </li>
    </ul>
</div>
{% endblock %}
