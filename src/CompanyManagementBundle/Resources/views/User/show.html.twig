{% extends 'base.html.twig' %}

{% block body %}



    <div class="en">
        <div class="show_user">
        <h1>User</h1>
        <table class="show_user">
            <tbody>
            <tr>
                <th class="right">Id</th>
                <td class="sher">{{ user.id }}</td>
            </tr>
            <tr>
                <th class="right">Firstname</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th class="right">Lastname</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th class="right">Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th class="right">Dateadded</th>
                <td>{% if user.dateAdded %}{{ user.dateAdded|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th class="right">Address</th>
                <td>{{ user.address }}</td>
            </tr>
            <tr>
                <th class="right">Zipcode</th>
                <td>{{ user.zipCode }}</td>
            </tr>
            <tr>
                <th class="right">City</th>
                <td>{{ user.city }}</td>
            </tr>
            <tr>
                <th class="right">Telephone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th class="right">Hourlyrate</th>
                <td>{{ user.hourlyRate }}</td>
            </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('user_list') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('user_edit', { 'id': user.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
        </div>
    </div>
{% endblock %}
