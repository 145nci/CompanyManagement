{% extends 'base.html.twig' %}

{% block body %}
    <h1>Acl</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ acl.id }}</td>
            </tr>
            <tr>
                <th>Companyindex</th>
                <td>{% if acl.companyIndex %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('acl_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('acl_edit', { 'id': acl.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
