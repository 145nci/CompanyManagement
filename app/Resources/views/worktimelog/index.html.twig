{% extends 'base.html.twig' %}

{% block body %}
    <h1>WorkTimeLog list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Datestart</th>
                <th>Dateend</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for workTimeLog in workTimeLogs %}
            <tr>
                <td><a href="{{ path('worktimelog_show', { 'id': workTimeLog.id }) }}">{{ workTimeLog.id }}</a></td>
                <td>{% if workTimeLog.dateStart %}{{ workTimeLog.dateStart|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if workTimeLog.dateEnd %}{{ workTimeLog.dateEnd|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('worktimelog_show', { 'id': workTimeLog.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('worktimelog_edit', { 'id': workTimeLog.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('worktimelog_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
